<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.bitsvatsal.scientificcalculator.MainActivity"
    android:background="#fc817e">

    <Button
        android:layout_width="180dp"
        android:layout_height="70dp"
        android:text="0"
        android:id="@+id/b0"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#fc817e"
        android:textSize="30sp"
        android:textColor="#ffffff"
        android:clickable="true"
        android:longClickable="false" />

    <Button
        android:layout_width="90dp"
        android:layout_height="70dp"
        android:text="1"
        android:id="@+id/b1"
        android:background="#fc817e"
        android:layout_above="@+id/b0"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="30sp"
        android:textColor="#ffffff"
        android:clickable="true"
        android:longClickable="false" />

    <Button
        android:layout_width="90dp"
        android:layout_height="70dp"
        android:text="4"
        android:id="@+id/b4"
        android:background="#fc817e"
        android:layout_above="@+id/b1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="30sp"
        android:textColor="#ffffff"
        android:clickable="true"
        android:longClickable="false" />

    <Button
        android:layout_width="90dp"
        android:layout_height="70dp"
        android:text="7"
        android:id="@+id/b7"
        android:background="#fc817e"
        android:layout_above="@+id/b4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="30sp"
        android:textColor="#ffffff"
        android:clickable="true"
        android:longClickable="false" />

    <Button
        android:layout_width="90dp"
        android:layout_height="70dp"
        android:text="8"
        android:id="@+id/b8"
        android:background="#fc817e"
        android:layout_alignTop="@+id/b7"
        android:layout_toRightOf="@+id/b7"
        android:layout_toEndOf="@+id/b7"
        android:textSize="30sp"
        android:textColor="#ffffff"
        android:clickable="true"
        android:longClickable="false" />

    <Button
        android:layout_width="90dp"
        android:layout_height="70dp"
        android:text="5"
        android:id="@+id/b5"
        android:background="#fc817e"
        android:layout_below="@+id/b8"
        android:layout_alignLeft="@+id/b8"
        android:layout_alignStart="@+id/b8"
        android:textSize="30sp"
        android:textColor="#ffffff"
        android:clickable="true"
        android:longClickable="false" />

    <Button
        android:layout_width="90dp"
        android:layout_height="70dp"
        android:text="C"
        android:id="@+id/bc"
        android:background="#fc817e"
        android:textSize="30sp"
        android:textColor="#ffffff"
        android:layout_above="@+id/b7"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:clickable="true"
        android:longClickable="false" />

    <Button
        android:layout_width="90dp"
        android:layout_height="70dp"
        android:text="+/-"
        android:id="@+id/bsign"
        android:background="#fc817e"
        android:layout_above="@+id/b7"
        android:layout_toRightOf="@+id/bc"
        android:layout_toEndOf="@+id/bc"
        android:textSize="30sp"
        android:textColor="#ffffff"
        android:clickable="true"
        android:longClickable="false" />

    <Button
        android:layout_width="90dp"
        android:layout_height="70dp"
        android:text="%"
        android:id="@+id/bperc"
        android:background="#fc817e"
        android:layout_alignTop="@+id/bsign"
        android:layout_toRightOf="@+id/bsign"
        android:layout_toEndOf="@+id/bsign"
        android:textSize="30sp"
        android:textColor="#ffffff"
        android:clickable="true"
        android:longClickable="false" />

    <Button
        android:layout_width="90dp"
        android:layout_height="70dp"
        android:text="9"
        android:id="@+id/b9"
        android:background="#fc817e"
        android:layout_below="@+id/bsign"
        android:layout_toRightOf="@+id/b8"
        android:layout_toEndOf="@+id/b8"
        android:textSize="30sp"
        android:textColor="#ffffff"
        android:clickable="true"
        android:longClickable="false" />

    <Button
        android:layout_width="90dp"
        android:layout_height="70dp"
        android:text="6"
        android:id="@+id/b6"
        android:background="#fc817e"
        android:layout_below="@+id/b8"
        android:layout_toRightOf="@+id/b8"
        android:layout_toEndOf="@+id/b8"
        android:textSize="30sp"
        android:textColor="#ffffff"
        android:clickable="true"
        android:longClickable="false" />

    <Button
        android:layout_width="90dp"
        android:layout_height="70dp"
        android:text="3"
        android:id="@+id/b3"
        android:background="#fc817e"
        android:layout_below="@+id/b5"
        android:layout_toRightOf="@+id/b5"
        android:layout_toEndOf="@+id/b5"
        android:textSize="30sp"
        android:textColor="#ffffff"
        android:clickable="true"
        android:longClickable="false" />

    <Button
        android:layout_width="90dp"
        android:layout_height="70dp"
        android:text="2"
        android:id="@+id/b2"
        android:background="#fc817e"
        android:layout_below="@+id/b5"
        android:layout_alignLeft="@+id/b5"
        android:layout_alignStart="@+id/b5"
        android:textSize="30sp"
        android:textColor="#ffffff"
        android:clickable="true"
        android:longClickable="false" />

    <Button
        android:layout_width="90dp"
        android:layout_height="70dp"
        android:text="/"
        android:id="@+id/bdiv"
        android:background="#fc817e"
        android:layout_alignTop="@+id/bperc"
        android:layout_toRightOf="@+id/bperc"
        android:layout_toEndOf="@+id/bperc"
        android:textSize="30sp"
        android:textColor="#ffffff"
        android:clickable="true"
        android:longClickable="false" />

    <Button
        android:layout_width="90dp"
        android:layout_height="70dp"
        android:text="X"
        android:id="@+id/bmul"
        android:background="#fc817e"
        android:layout_below="@+id/bperc"
        android:layout_toRightOf="@+id/bperc"
        android:layout_toEndOf="@+id/bperc"
        android:textSize="30sp"
        android:textColor="#ffffff"
        android:clickable="true"
        android:longClickable="false" />

    <Button
        android:layout_width="90dp"
        android:layout_height="70dp"
        android:text="-"
        android:id="@+id/bsub"
        android:background="#fc817e"
        android:layout_below="@+id/b9"
        android:layout_toRightOf="@+id/b9"
        android:layout_toEndOf="@+id/b9"
        android:textSize="30sp"
        android:textColor="#ffffff"
        android:clickable="true"
        android:longClickable="false" />

    <Button
        android:layout_width="90dp"
        android:layout_height="70dp"
        android:text="+"
        android:id="@+id/badd"
        android:background="#fc817e"
        android:layout_below="@+id/b6"
        android:layout_toRightOf="@+id/b6"
        android:layout_toEndOf="@+id/b6"
        android:textSize="30sp"
        android:textColor="#ffffff"
        android:clickable="true"
        android:longClickable="false" />

    <Button
        android:layout_width="90dp"
        android:layout_height="70dp"
        android:text="="
        android:id="@+id/bequal"
        android:background="#fc817e"
        android:layout_below="@+id/b3"
        android:layout_toRightOf="@+id/b3"
        android:layout_toEndOf="@+id/b3"
        android:textSize="30sp"
        android:textColor="#ffffff"
        android:clickable="true"
        android:longClickable="false" />

    <Button
        android:layout_width="90dp"
        android:layout_height="70dp"
        android:text="."
        android:id="@+id/bdec"
        android:background="#fc817e"
        android:layout_alignTop="@+id/bequal"
        android:layout_toLeftOf="@+id/bequal"
        android:layout_toStartOf="@+id/bequal"
        android:textSize="30sp"
        android:textColor="#ffffff"
        android:clickable="true"
        android:longClickable="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/bc"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:gravity="bottom|end"
        android:textColor="#FFFFFF"
        android:textSize="40sp"
        android:background="@android:color/holo_blue_light"
        android:layout_alignRight="@+id/bdiv"
        android:layout_alignEnd="@+id/bdiv"
        android:text="0"
        android:singleLine="false" />

</RelativeLayout>
